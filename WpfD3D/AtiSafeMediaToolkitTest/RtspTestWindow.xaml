<Window x:Class="AtiSafeMediaToolkitTest.RtspTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RtspTestWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
             <Button Content="Start" Click="Button_Click" Width="100" Height="25"/>
        <Button Content="Stop" Click="ButtonStop_Click" Width="100" Height="25"/>
        </StackPanel>
       
        <Image  Grid.Row="1" HorizontalAlignment="Stretch" Margin="5" Name="imageD3D" Stretch="Uniform" VerticalAlignment="Stretch" />
        <Rectangle Width="100" Height="100" Fill="Red" Grid.RowSpan="2"/>
    </Grid>
</Window>
